{
  "manifest_version": 3,
  "name": "Lab Result Auto-Fill",
  "version": "1.0",
  "description": "Upload JSON lab results and auto-fill DEM DZ Labo form.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "180": "icons/icon180.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "180": "icons/icon180.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}